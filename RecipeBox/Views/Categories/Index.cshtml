@{
	Layout = "_Layout";
}

@using RecipeBox.Models;

@if (Model.Count == 0)
{
	<h4>There are currently no categories!</h4>
}
else
{
	<ul>
		@foreach (Category category in Model)
		{
			<li>@Html.ActionLink($"{category.Name}", "Details", new {id=category.CategoryId})</li>
		}
	</ul>
}

<p>@Html.ActionLink("Add a new category", "Create")</p>